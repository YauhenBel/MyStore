<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".controllers.DoOrder"
    android:id="@+id/toolBar">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:text="Вы заказываете:"
                android:textSize="16sp"
                tools:layout_editor_absoluteX="117dp"
                tools:layout_editor_absoluteY="16dp" />

            <TextView
                android:id="@+id/tvNameOrderProduct"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:gravity="center"
                android:text="Название"
                android:textSize="16sp"
                app:layout_constraintTop_toBottomOf="@+id/textView3"
                tools:layout_editor_absoluteX="20dp" />

            <TextView
                android:id="@+id/tvCostOrderProduct"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:gravity="center"
                android:text="Название"
                android:textSize="16sp"
                app:layout_constraintTop_toBottomOf="@+id/textView3"
                tools:layout_editor_absoluteX="20dp" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:text="Введите ваши данные:"
                android:textSize="16sp"
                app:layout_constraintTop_toBottomOf="@+id/tvNameOrderProduct"
                tools:layout_editor_absoluteX="95dp" />

            <EditText
                android:id="@+id/etSurname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:ems="10"
                android:hint="Фамилия"
                android:inputType="textPersonName"
                app:layout_constraintTop_toBottomOf="@+id/etName"
                tools:layout_editor_absoluteX="73dp" />

            <EditText
                android:id="@+id/etName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:ems="10"
                android:hint="Имя"
                android:inputType="textPersonName"
                app:layout_constraintTop_toBottomOf="@+id/textView2"
                tools:layout_editor_absoluteX="73dp" />

            <EditText
                android:id="@+id/etPhoneNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:ems="10"
                android:hint="Телефон"
                android:inputType="textPersonName"
                app:layout_constraintTop_toBottomOf="@+id/etSurname"
                tools:layout_editor_absoluteX="73dp" />

            <EditText
                android:id="@+id/etAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:ems="10"
                android:hint="Адрес"
                android:inputType="textMultiLine"
                app:layout_constraintTop_toBottomOf="@+id/etPhoneNumber"
                tools:layout_editor_absoluteX="73dp" />

            <Button
                android:id="@+id/btnSendOrder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="15dp"
                android:text="Отправить заказ"
                app:layout_constraintTop_toBottomOf="@+id/etAddress"
                tools:layout_editor_absoluteX="103dp" />
        </LinearLayout>
    </ScrollView>


</android.support.v7.widget.Toolbar>